	<input type="text"  class="border border-dark mt-2 p-2 ml-3 " name="description" placeholder="description">
	
<input type="hidden" name="cuser" value="<%=cgs.username%>" >	
		
	</div>
	<div clas="row">
	<button class="btn btn-warning mt-3 ml-3">
		Save
	</button>
	</div>

	</form>
	</div>
