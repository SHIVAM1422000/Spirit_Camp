<!DOCTYPE html>
<html>
<head>
	<title><%=cgs.name%></title>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<!-- ***************** Minor Styling ********************
	            ======================== -->
	
	
	<style rel="stylesheet" type="text/css">
		#commentText{
			font-size:1.4rem;
		}
		
		#right{
			
			margin-left:50%;
		}
	</style>
	
	 <!-- ***********Minor Styling End************** -->
</head>
<body>
	
	<!-- Navbar SEction -->
	<!-- =============================================== -->
	<div class="container"> 
<nav class="navbar navbar-expand-lg navbar-light bg-info mb-3 p-2">
  <a class="navbar-brand text-white ml-2" href="/">YelpCamp</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
	 
    <ul class="navbar-nav ml-auto">
		
		<li><a class="text-white" href="/login">Login</a></li>
		<li><a class="text-white ml-3 mr-2" href="/register">SignUp</a></li>
		<li><a class="text-white ml-3 mr-2" href="/logout">LogOut</a></li>
		
	</ul>
  </div>
</nav>
		
	</div>
	
	<!-- ************************************ -->
<div id=container class="container">
	<!-- row div 3 -->
	<div class="row">
		<div class="col-md-3">
			<ul class="list-group">
  <li class="list-group-item active">List Item 1</li>
  <li class="list-group-item">List Item 2</li>
  <li class="list-group-item">List Item 3</li>
  <li class="list-group-item">List Item 4</li>
 
</ul>
		</div>
	<!-- ***********Row Div3 Ended******************* -->
		
		<!-- colunm div 9 -->
		<div class="col-md-9">
			
			<div class="row">
				<div class="col-md-12">
<h1 class="text-dark">
	<%=cgs.name%>
</h1>
				</div>
				<div class="col-md-12" id="ImageBlock">
	<img class="border border-info" src="<%=cgs.image%>">
				</div>
				
				<div class="col-md-12" id="DescriptionBlock">
					<span class="text-dark">
	             <%=cgs.description%>
					</span>
				</div>
				
				<div class="col-md-12 mt-2" id="DescriptionBlock">
					<span class="font-weight-bold text-info"> 
	             <em id="right">Submitted By:- <%=cgs.username%></em>
				 
					</span>
				</div>
				
				<!-- edit campground button -->
				
				<div class="col-md-12 mt-2">
					
					
					<%if((currentUser)&&(currentUser._id.equals(cgs.id))){%>
					<form action="/campgrounds/<%=cgs._id%>/editcg">
		<button class="btn btn-warning btn-sm">
			Edit/Delete Campground
		</button>	
	                </form>
					<%}%>
			</div>
				<!-- ********************************* -->
		<div class="col-md-9 jumbotron mt-5" id="comment">
					<div class="row">
						<div class="col-md-7">
							<h3 class="text-danger">Comment</h3>
						</div>
						<div class="col-md-5">
<a href="/campgrounds/<%=cgs._id%>/comment/new"><button class="btn btn-danger mb-3">
		Add New Comment
	</button></a>
						</div>
					</div>
					
	<%cgs.comment.forEach(function(comment){%>
	<div class="row mb-3">
    
		<div class="font-weight-bold col-md-12" id="commentText">
	<%=comment.text%>
		</div>
		
		<div  class="mb-3 col-md-12">
		<span class="text-danger font-weight-bold font-italic">By:-</span><span class="font-weight-bold"><%=cgs.username%></span>
		</div>
		
		<!-- edit comment button form -->
		<!-- ======================================== -->
		<div>
		<a href="/campgrounds/<%=cgs._id%>/comment/<%=comment._id%>/edit">Edit/Delete</a>
	
	</div>
	
	<!-- ***********************************************		 -->
	</div>	
		<%})%>
			
			<div class="col-md-12">
<form action="/campgrounds">
		<button class="btn btn-outline-dark mt-3">
			ReturnToHomePage
		</button>
	</form>
	</div>
				</div>
				
			</div>
			
		</div>
		<!-- colunm  div 9 ended -->
	</div>
	</div>
	
	</body>
</html>